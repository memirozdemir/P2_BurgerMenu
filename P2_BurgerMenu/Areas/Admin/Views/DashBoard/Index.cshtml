@model List<P2_BurgerMenu.Entities.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int amount = 0;
    var color = "danger";


}
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-9 grid-margin-lg-0 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Çok Satanlar</h4>
                    <div class="table-responsive mt-3">
                        <table class="table table-header-bg">
                            <thead>
                                <tr>
                                    <th>
                                        İsim
                                    </th>
                                    <th>
                                        Kategori
                                    </th>
                                    <th>
                                        Fiyat
                                    </th>
                                    <th>
                                        Satış Sayısı
                                    </th>
                                </tr>
                            </thead>
                            @foreach (var x in Model)
                            {
                                amount = x.ProductSold;


                                
                                    if (amount <= 10)
                                    {
                                        color = "danger";
                                    }
                                    if (amount <= 40 && amount > 10)
                                    {
                                        color = "warning";
                                    }
                                    if (amount > 40 && amount <= 70)
                                    {
                                        color = "info";
                                    }
                                    if (amount > 70)
                                    {
                                        color = "success";
                                    }

                                
                                <tbody>
                                    <tr>
                                        <td>
                                            <i class="flag-icon flag-icon-us mr-2" title="us" id="us"></i> @x.ProductName
                                        </td>
                                        <td>
                                            @x.Category.CategoryName
                                        </td>
                                        <td>
                                            <div class="text"><i class="fa fa-turkish-lira">₺</i>@x.Price</div>
                                        </td>
                                        <td>
                                            <div class="row">
                                                <div class="col-sm-10">
                                                    <div class="progress">
                                                        <div class="progress-bar bg-@color" role="progressbar" style="width:@x.ProductSold%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-2">
                                                    @x.ProductSold
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 grid-margin-lg-0 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-3">İnceleme puan ortalaması</h4>
