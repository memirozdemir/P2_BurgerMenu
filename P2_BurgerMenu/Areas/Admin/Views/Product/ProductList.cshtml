@model List<P2_BurgerMenu.Entities.Product>

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Product List</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product ID</th>
                            <th>Product Picture</th>
                            <th>Product Name</th>
                            <th>Product Category</th>
                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.ProductID</td>
                                <td><img src="@x.ImageURL" height="50" width="50" /></td>
                                <td>@x.ProductName</td>
                                <td>@x.Category.CategoryName</td>
                                <td><a href="/Admin/Product/DeleteProduct/@x.ProductID" class="btn btn-danger">Delete</a></td>
                                <td><a href="/Admin/Product/UpdateProduct/@x.ProductID" class="btn btn-success">Update</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Admin/Product/CreateProduct" class="btn btn-primary">Add New Product</a>
            </div>
        </div>
    </div>
</div>



