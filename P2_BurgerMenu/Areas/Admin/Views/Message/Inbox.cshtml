@model List<P2_BurgerMenu.Entities.Message>

@{
    ViewBag.Title = "Inbox";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Your Messages</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Sender</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>View Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@x.SenderMail</td>
                                <td>@x.Title</td>
                                <td>@x.SendDate.ToShortDateString()</td>
                                <td><a href="/Admin/Message/NewMessage/" class="btn btn-primary">View Message</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Admin/Message/NewMessage" class="btn btn-info">Send new message</a>
            </div>
        </div>
    </div>
</div>



