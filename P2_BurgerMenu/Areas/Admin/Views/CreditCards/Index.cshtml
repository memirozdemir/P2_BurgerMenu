@model List<P2_BurgerMenu.Entities.CreditCard>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kredi Kartı Listesi</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Kart ID</th>
                            <th>Kart NumarasI</th>
                            <th>Kart Sahibi</th>
                            <th>Son Kullanma Tarihi</th>
                            <th>Kart Güvenlik Kodu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.CreditCardID</td>
                                <td>@x.CardNO</td>
                                <td>@x.CardOwner</td>
                                <td>@x.CardExpDate</td>
                                <td>@x.CardCVC</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
            </div>
        </div>
    </div>
</div>

