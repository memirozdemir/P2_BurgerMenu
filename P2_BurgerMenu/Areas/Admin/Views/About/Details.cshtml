@model P2_BurgerMenu.Entities.About
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımda Ayarları</h4>
            <form method="post">
                @Html.HiddenFor(x=>x.AboutID)  
                <label>Başlık</label>
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                <br />
                <label>Gözüken İçerik</label>
                @Html.TextBoxFor(x => x.MiniContent, new { @class = "form-control" })
                <br />
                <label>İçerik</label>
                @Html.TextAreaFor(x => x.Content, new { @class = "form-control",@rows="20" } )
                <br />
                <label>Resim Yolu</label>
                @Html.TextBoxFor(x => x.PictureURL, new { @class = "form-control" })
                <br />
                <label>Adres</label>
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                <br />
                <label>Telefon</label>
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                <br />
                <label>Email</label>
                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                <br />
                <label>Konum Yolu</label>
                @Html.TextBoxFor(x => x.LocationURL, new { @class = "form-control" })
                <br />
                <br />
                <br />
                <button class="btn btn-success">Güncelle</button>
            </form>
        </div>
    </div>
</div>

