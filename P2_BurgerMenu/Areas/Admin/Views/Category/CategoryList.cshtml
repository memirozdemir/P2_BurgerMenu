@model List<P2_BurgerMenu.Entities.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Listesi</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Kategori ID</th>
                            <th>Kategori Adı</th>
                            <th>Kategorideki Ürünler</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.CategoryID</td>
                                <td>@x.CategoryName</td>
                                <td><a href="/Admin/Category/CategoryProducts/@x.CategoryID" class="btn btn-warning">Kategorideki Ürünler</a></td>
                                <td><a href="/Admin/Category/DeleteCategory/@x.CategoryID" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Admin/Category/UpdateCategory/@x.CategoryID" class="btn btn-success">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Admin/Category/AddCategory/" class="btn btn-primary">Yeni Kategori Ekle</a>
            </div>
        </div>
    </div>
</div>

