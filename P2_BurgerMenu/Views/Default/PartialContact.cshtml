<section class="site-section bg-light" id="section-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center mb-5 site-animate">
                <h2 class="display-4">İletişimde Kalın</h2>
                <div class="row justify-content-center">
                    <div class="col-md-7">
                        <p class="lead">Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-7 mb-5 site-animate">
                <form id="contactForm">
                    <div class="form-group">
                        <label for="name" class="sr-only">Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" placeholder="İsim">
                    </div>
                    <div class="form-group">
                        <label for="email" class="sr-only">Email</label>
                        <input type="text" class="form-control" id="Email" name="Email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="message" class="sr-only">Mesaj</label>
                        <textarea name="Message" id="Message" cols="30" rows="10" class="form-control" placeholder="Mesajınızı yazın"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-lg" value="Gönder">
                    </div>
                </form>
            </div>
            @Html.Action("PartialLocation", "Default")
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#contactForm').submit(function (event) {
            event.preventDefault(); // Formun normal gönderimini engelle

            $.ajax({
                url: '@Url.Action("PartialContact", "Default")', // Form verilerini gönderecek URL
                type: 'POST',
                data: $(this).serialize(), // Formdaki verileri al ve gönder
                success: function (response) {
                    alert("Mesajınız başarıyla gönderildi!");
                    $('#contactForm')[0].reset(); // Formu temizle
                },
                error: function () {
                    alert("Mesaj gönderilirken bir hata oluştu.");
                }
            });
        });
    });
</script>
